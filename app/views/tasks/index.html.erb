<div class="container">
  <h2>タスク一覧</h2>
  <table class="table table-striped">
    <thead>
      <tr>
        <th class="col">No.</th>
        <th class="col">タスク名</th>
        <th class="col">優先順位</th>
        <th class="col">期限</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.id %></td>
          <td><%= task.name %></td>
          <td><%= task.priority %></td>
          <td><%= task.deadline %></td>
          <td><%= link_to '詳細', task_path(task) %></td>
          <td><%= link_to '編集', edit_task_path(task) %></td>
          <td><%= link_to '削除', task_path(task), method: :delete, data: {confirm: "削除しますか?"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p class="btn btn-warning"><%= link_to "追加", new_task_path %></p>
</div>
